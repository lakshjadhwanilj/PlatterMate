<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container my-4 justify-content-center">
    <div class="col-md-8">
        <%- include('partials/searchBtn') %>
    </div>
</div>

<div class='container mb-4'>
    <h5 class='mb-4'>Below are the search results...</h5>
    <% if(recipes.length > 0) { %>
        <div class='row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 d-flex justify-content-between'>
            <% recipes.forEach((recipe) => { %>
                <div class="col d-flex justify-content-center">
                    <%- include('partials/card', { recipe }) %>
                </div>
            <% }); %>
        </div>
        <div class='mt-4'>
            <ul class='pagination justify-content-center'>
                <li class='page-item <%= !recipes.prev && "disabled" %>'>
                    <a href='<%= recipes.prev ? `/search?query=${query}&page=${recipes.prev.page}` : "#" %>' class="page-link">Previous</a>
                </li>
                <li class='page-item <%= !recipes.next && "disabled" %>'>
                    <a href='<%= recipes.next ? `/search?query=${query}&page=${recipes.next.page}` : "#" %>' class="page-link">Next</a>
                </li>
            </ul>
        </div>
    <% } else { %>
        <p>No recipes found</p>
    <% } %>
</div>

<%- include('partials/footnote') %>
<%- include('partials/footer') %>